{
  "name": "bridgecmdr",
  "version": "2.0.0-beta",
  "description": "Professional switch and monitor controller for retro gaming",
  "main": "./dist/main/index.js",
  "scripts": {
    "rebuild": "electron-rebuild",
    "postinstall": "npm rebuild",
    "production": "npm run prod",
    "prod": "cross-env NODE_ENV=production webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "devevlopment": "npm run dev",
    "dev": "cross-env NODE_ENV=development webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "start": "electron .",
    "test": "test.js",
    "package": "build/package",
    "make": "npm run prod && npm run build:buster:armhf",
    "make:buster:armhf": "npm run prod && npm run build:buster:armhf",
    "docker:build:buster:armhf": "docker image build --build-arg USERNAME=${USER} --tag bridgecmdr/armhf:buster -f docker/buster/armhf/Dockerfile docker",
    "docker:shell:buster:armhf": "docker container run --volume ${PWD}/docker/scripts:/scripts --volume ${PWD}:/workdir --user $(id -u ${USER}):$(id -g ${USER}) --rm -it bridgecmdr/armhf:buster shell",
    "build:buster:armhf": "docker container run --volume ${PWD}/docker/scripts:/scripts --volume ${PWD}:/workdir --user $(id -u ${USER}):$(id -g ${USER}) --rm -it bridgecmdr/armhf:buster build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/6XGate/bridgecmdr.git"
  },
  "keywords": [
    "linux",
    "raspberry-pi",
    "retrogaming",
    "audio-video",
    "sony-bmv",
    "sony-pvm",
    "extron"
  ],
  "author": {
    "name": "Matthew Holder",
    "email": "sixxgate@hotmail.com"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/6XGate/bridgecmdr/issues"
  },
  "homepage": "https://github.com/6XGate/bridgecmdr#readme",
  "files": [
    "dist/main/**/*",
    "dist/render/**/*"
  ],
  "branding": {
    "productName": "BridgeCmdr",
    "summary": "Controls monitors and A/V equipment in a retrogaming setup",
    "copyright": "Copyright 2019-2021 Matthew Holder",
    "bundleId": "org.sleepingcats.bridgecmdr"
  },
  "installers": {
    "common":  {
      "category": "AudioVideo",
      "section": "misc"
    },
    "snap": {
      "confinement": "classic",
      "grade": "devel"
    },
    "deb": {

    }
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "devDependencies": {
    "@mdi/font": "^5.9.55",
    "@mdi/js": "^5.9.55",
    "@mdi/svg": "^5.9.55",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/lodash": "^4.14.168",
    "@types/pouchdb-adapter-idb": "^6.1.3",
    "@types/pouchdb-core": "^7.0.6",
    "@types/pouchdb-find": "^6.3.6",
    "@types/serialport": "^8.0.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "axios": "^0.21.1",
    "buefy": "^0.8.20",
    "bulma": "^0.9.1",
    "cross-env": "^7.0.3",
    "decoration-vuex": "^1.2.2",
    "electron": "^8.5.5",
    "electron-devtools-installer": "^3.1.1",
    "electron-installer-debian": "^3.1.0",
    "electron-packager": "^15.2.0",
    "electron-rebuild": "^2.3.4",
    "electron-unhandled": "^3.0.2",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^7.5.0",
    "eslint-webpack-plugin": "^2.4.3",
    "html-webpack-plugin": "^4.5.1",
    "laravel-mix": "^5.0.9",
    "lodash": "^4.17.20",
    "pouchdb-adapter-idb": "^7.2.2",
    "pouchdb-core": "^7.2.2",
    "pouchdb-find": "^7.2.2",
    "read-package-json": "^3.0.0",
    "resolve-url-loader": "^3.1.2",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "sass-resources-loader": "^2.1.1",
    "ts-loader": "^8.0.14",
    "type-fest": "^0.20.2",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2",
    "vahvista": "^1.1.1",
    "vee-validate": "^3.4.5",
    "vue": "^2.6.12",
    "vue-class-component": "^7.2.6",
    "vue-loader": "^15.9.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.4.9",
    "vue-template-compiler": "^2.6.12",
    "vuex": "^3.6.0",
