{
  "name": "bridgecmdr",
  "productName": "BridgeCmdr",
  "version": "2.0.0-beta",
  "description": "Professional switch and monitor controller for retro gaming",
  "main": "./dist/main/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "production": "npm run prod",
    "prod": "cross-env NODE_ENV=production webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "devevlopment": "npm run dev",
    "dev": "cross-env NODE_ENV=development webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "start": "electron .",
    "test": "test.js",
    "package": "electron-builder --linux snap",
    "package:armhf": "electron-builder --armv7l --linux snap",
    "package:dir": "electron-builder --dir",
    "pack": "npm run prod && npm run package:dir",
    "dist": "npm run prod && && npm run package",
    "dist:armhf": "npm run prod && npm run build:armhf",
    "docker": "npm run docker:armhf",
    "docker:amd64": "docker image build --build-arg USERNAME=${USER} --tag bridgecmdr/build:amd64 docker/amd64",
    "docker:armhf": "docker image build --build-arg USERNAME=${USER} --tag bridgecmdr/build:armhf docker/armhf",
    "shell:armhf": "docker container run --volume ${PWD}/docker/scripts:/scripts --volume ${PWD}:/workdir --user $(id -u ${USER}):$(id -g ${USER}) --rm -it bridgecmdr/build:armhf shell",
    "build:amd64": "docker container run --volume ${PWD}/docker/scripts:/scripts --volume ${PWD}:/workdir --user $(id -u ${USER}):$(id -g ${USER}) --rm -it bridgecmdr/build:amd64 build",
    "build:armhf": "docker container run --volume ${PWD}/docker/scripts:/scripts --volume ${PWD}:/workdir --user $(id -u ${USER}):$(id -g ${USER}) --rm -it bridgecmdr/build:armhf build:armhf"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/6XGate/bridgecmdr.git"
  },
  "keywords": [
    "linux",
    "raspberry-pi",
    "retrogaming",
    "audio-video",
    "sony-bmv",
    "sony-pvm",
    "extron"
  ],
  "author": {
    "name": "Matthew Holder",
    "email": "sixxgate@hotmail.com"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/6XGate/bridgecmdr/issues"
  },
  "homepage": "https://github.com/6XGate/bridgecmdr#readme",
  "build": {
    "appId": "org.sleepingcats.bridgecmdr",
    "productName": "BridgeCmdr",
    "copyright": "Copyright 2019-2020 Matthew Holder",
    "buildDependenciesFromSource": true,
    "linux": {
      "category": "AudioVideo"
    },
    "files": [
      "dist/main/**/*",
      "dist/render/**/*"
    ],
    "snap": {
      "summary": "Controls monitors and A/V equipment in a retrogaming setup",
      "confinement": "classic",
      "grade": "devel"
    }
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "devDependencies": {
    "@mdi/font": "^5.8.55",
    "@mdi/js": "^5.8.55",
    "@mdi/svg": "^5.8.55",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/lodash": "^4.14.166",
    "@types/pouchdb": "^6.4.0",
    "@types/serialport": "^8.0.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "@vue/eslint-config-typescript": "^7.0.0",
    "axios": "^0.21.1",
    "buefy": "^0.8.20",
    "bulma": "^0.9.1",
    "cross-env": "^7.0.3",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-unhandled": "^3.0.2",
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^7.4.0",
    "eslint-webpack-plugin": "^2.4.1",
    "fibers": "^5.0.0",
    "html-webpack-plugin": "^4.5.0",
    "laravel-mix": "^5.0.9",
    "lodash": "^4.17.20",
    "pouchdb-browser": "^7.2.2",
    "pouchdb-find": "^7.2.2",
    "read-package-json": "^3.0.0",
    "resolve-url-loader": "^3.1.2",
    "sass": "^1.32.0",
    "sass-loader": "^10.1.0",
    "sass-resources-loader": "^2.1.1",
    "ts-loader": "^8.0.12",
    "type-fest": "^0.20.2",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2",
    "vee-validate": "^3.4.5",
    "vue": "^2.6.12",
    "vue-class-component": "^7.2.6",
    "vue-loader": "^15.9.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.4.9",
    "vue-template-compiler": "^2.6.12",
    "vuex": "^3.6.0"
  },
  "dependencies": {
    "electron": "^8.5.5",
    "serialport": "^9.0.4"
  }
}
